@model PizzaBox.Client.Models.PizzaViewModel

<form action="/Pizza/Create" method="POST">
	@Html.AntiForgeryToken()
	<select asp-for="@Model.Crust">
		@foreach (var item in @Model.CrustList) {
			<option value="@item.Name">item</option>
		}
	</select>
	@foreach (var item in @Model.SizeList) {
		@Html.RadioButtonFor(pvm => pvm.Size, item.Name)
	}
	@foreach (var item in @Model.ToppingList) {
		<input type="checkbox" name="@Model.Toppings" value="@item.Name">
	}
	<button type="submit">Create</button>
</form>
